<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Gestor_Tareas"
             xmlns:converters="clr-namespace:Gestor_Tareas.Converters"  
             x:Class="Gestor_Tareas.App">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Merged Dictionaries para estilos -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/TelerikStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Registrar el PriorityToColorConverter -->
            <converters:PriorityToColorConverter x:Key="PriorityToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>

